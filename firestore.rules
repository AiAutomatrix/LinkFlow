rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow public GET for profile pages
      allow get: if true; 
      
      // Allow authenticated user to read their own data (for dashboard/analytics)
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /links/{linkId} {
        // Allow public LIST for profile pages
        allow list: if true;

        // Allow authenticated user to read/write their own links
        allow get, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
