rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to user profiles.
    match /users/{userId} {
      allow get: if true;
      // Writes (create, update, delete) are only allowed by the authenticated user who owns the document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'links' subcollection within each user document.
    match /users/{userId}/links/{linkId} {
      // Allow public read access (get and list) to all links for a user.
      // This is necessary for the public profile page to display the links.
      allow read: if true;
      // Writes (create, update, delete) are only allowed by the authenticated user who owns the parent user document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
