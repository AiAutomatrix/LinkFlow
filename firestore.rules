rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow anyone to read a user's public profile data
      allow get: if true;
      
      // Allow only the authenticated user to write to their own profile
      allow write: if request.auth.uid == userId;
      
      // Allow only the authenticated user to read/write their own links
      match /links/{linkId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // This is the crucial part: it allows the public page to query
    // the users collection to find a profile by username.
    match /users/{userId} {
       allow list: if true;
    }
  }
}
