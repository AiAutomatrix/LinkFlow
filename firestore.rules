rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow public read of a user's profile for the /u/[username] page.
      allow get: if true;
      
      // Allow an authenticated user to read and write to their own profile.
      // This is required for the dashboard pages (like Analytics) to work.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /links/{linkId} {
        // Allow public listing and reading of links for the profile page.
        allow list, get: if true;

        // Allow the authenticated owner to write to their links.
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
