rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow anyone to query the users collection to find a profile by username.
      // This is required for the /u/[username] page to work.
      allow list: if true;
      // Allow anyone to read the data of a specific user profile.
      allow get: if true;
      
      // Only the authenticated user can write to their own profile.
      allow write: if request.auth != null && request.auth.uid == userId;

      match /links/{linkId} {
        // Allow anyone to list the links for a user.
        allow list: if true;
        // Allow anyone to read a specific link.
        allow get: if true;
        
        // Only the user who owns the parent profile can write to the links.
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
