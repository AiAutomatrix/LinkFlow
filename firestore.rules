
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow public read of a user's profile for the /u/[username] page
      allow get: if true;
      // Allow an authenticated user to read their own full profile data for the dashboard
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow an authenticated user to write to their own profile
      allow write: if request.auth != null && request.auth.uid == userId;

      match /links/{linkId} {
        // Allow public read of all links for the /u/[username] page
        allow list, get: if true;
        // Allow an authenticated user to read all their links for the dashboard
        allow read: if request.auth != null && request.auth.uid == userId;
        // Allow an authenticated user to write to their links
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
    