
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Public user profiles:
    // - Anyone can read the list of users (to query by username).
    // - Anyone can read a specific user's public profile data.
    // - Only the authenticated user can write to their own profile.
    match /users/{userId} {
      allow list, get: if true;
      allow write: if request.auth != null && request.auth.uid == userId;

      // Public links:
      // - Anyone can read the links for a public profile.
      // - Only the user can write to their own links.
      match /links/{linkId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
