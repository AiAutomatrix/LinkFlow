
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow anyone to get a user's public profile.
      allow get: if true;

      // Allow authenticated users to list/query their own data (for dashboard, analytics).
      // This rule is what secures the dashboard pages.
      allow list: if request.auth != null && request.auth.uid == userId;
      
      // Allow only the authenticated owner to write to their profile.
      allow write: if request.auth != null && request.auth.uid == userId;

      match /links/{linkId} {
        // Allow public read of all links for a user.
        // `read` covers `get` and `list`.
        allow read: if true;

        // Allow only the authenticated owner to write to their links.
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
