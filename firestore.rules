rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write only their own user profile document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone to read usernames for profile lookups
    match /usernames/{username} {
        allow read;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.username == resource.data.username;
    }

    // Allow users to manage their own links
    match /users/{userId}/links/{linkId} {
      allow read;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
