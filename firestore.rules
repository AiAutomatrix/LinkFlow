rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Public profiles need to be able to query the users collection by username.
      // allow read is a wildcard for get and list.
      allow read: if true;
      
      // Only the authenticated owner of a profile can write to it.
      allow write: if request.auth.uid == userId;

      match /links/{linkId} {
        // Public profiles need to list the links.
        allow read: if true;
        // Only the authenticated owner can write to their links.
        allow write: if request.auth.uid == userId;
      }
      
      match /clicks/{docId} {
        // Clicks are updated via a server-side API call, so we deny client reads/writes.
        allow read, write: if false;
      }
    }
  }
}
