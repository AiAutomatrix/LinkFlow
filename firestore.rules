
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Public user profiles:
    // Anyone can read the list of users or an individual user profile.
    // This is required for the public profile pages (/u/username) to function.
    match /users/{userId} {
      allow read: if true;
      // Only the authenticated user can write to their own profile.
      allow write: if request.auth != null && request.auth.uid == userId;

      // User links:
      // Read access is public to display links on the profile page.
      // Write access is restricted to the owner of the links.
      match /links/{linkId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
