
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public User Profiles: Allow anyone to read user profiles for public pages.
    match /users/{userId} {
      allow read: if true;
      
      // User-specific data: Only the authenticated user can write to their own document.
      allow write: if request.auth != null && request.auth.uid == userId;

      // Links Subcollection: Only the authenticated user can manage their own links.
      match /links/{linkId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
